@model MVC.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Detaljer Kategori";
}

    <div class="jumbotron">
        <h2>Detaljer</h2>

        <div>
            <h4>App</h4>
            <hr />

            <div class="panel panel-default">
                <div class="panel-heading">
                    Existerar i dessa Appar
                </div>
                <div class="panel panel-body">
                    <ul class="list-inline">
                        @foreach (var app in Model.Category.Apps)
                        {
                            <li class="list-group-item">
                                @app.AppName, @app.User
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Existerar i dessa Platser
                </div>
                <div class="panel panel-body">
                    <ul class="list-inline">
                        @foreach (var place in Model.Category.Places)
                        {
                            <li class="list-group-item">
                                @place.Name, @place.User
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="well-lg pull-right">
                <h4>Skapad av: @Model.Category.User</h4>
            </div>

        </div>
        <p>
            @Html.ActionLink("Redigera", "Edit", new { id = Model.Category.Id }) |
            @Html.ActionLink("Tillbaka", "Index", new { controller = "admin" })
        </p>
    </div>

