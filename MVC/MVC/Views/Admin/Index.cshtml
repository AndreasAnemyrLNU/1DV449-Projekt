@model MVC.ViewModels.AdminViewModel


<div class="jumbotron">

    <!-- Applications Start-->

    <p>
        @Html.ActionLink("Create New", "Create", new { controller = "apps"})
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => Model.Apps)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Apps)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { controller = "apps", id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { controller = "apps", id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { controller = "apps", id = item.Id })
                </td>
            </tr>
        }

    </table>
    <!-- Applications End -->

</div>
