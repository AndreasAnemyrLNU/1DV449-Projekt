@model MVC.ViewModels.AppViewModel

@{
    ViewBag.Title = "Detailjer App";
}

<div class="jumbotron">
    <h2>Detaljer</h2>

    <div class="container">
        <h6>@Html.DisplayNameFor(model => model.App.AppName)</h6>
        <h4>@Html.DisplayFor(model => model.App.AppName)</h4>
        <hr />

        <div class="panel panel-default">
            <div class="panel-heading">
                Tillhör dessa kategorier
            </div>
            <div class="panel panel-body">
                <ul class="list-inline">
                    @foreach (var category in Model.App.Categories)
                    {
                        <li class="list-group-item">
                            @category.Name
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="well-lg pull-right">
            <h4>Skapad av: @Model.App.User</h4>
        </div>

    </div>
    <p>
        @Html.ActionLink("Redigera", "Edit", new { id = Model.App.Id }) |
        @Html.ActionLink("Tillbaka", "Index", new { controller = "admin" })
    </p>
</div>

