<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Projekt 1DV449</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Guldkorn", "Index", "Home", null , new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Apps", "Index", "Apps", null, new { @class = "btn btn-primary" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "btn btn-primary" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!-- Inform user if something is wrong -->
        <!--<div class="panel">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Viktigt!
                </div>
                <div id="important-message" class="panel-body">
                </div>   
            </div>
        </div>-->
        @RenderBody()
        <hr />
        <footer>
            <div class="btn-group-sm footer-btn-group-sm">
                @Html.ActionLink("About", "About", "Home", null, new { @class = "btn btn-primary" })
                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "btn btn-primary" })
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
