@model IEnumerable<MVC.Models.Place>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Index Plats</h2>

    <p>
        @Html.ActionLink("Skapa Ny", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Radera", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
